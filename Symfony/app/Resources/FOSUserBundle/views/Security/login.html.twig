{% extends 'FOSUserBundle::base.html.twig' %}

{% block title %}{{ parent() }} - Iniciar sesión{% endblock %}

{% block content %}
    {% trans_default_domain 'FOSUserBundle' %}
    <div class="container">
        <div class="row">
            <div class="col s12 m10 offset-m1 l6 offset-l3" style="height: 100%">
                <div class="valign-wrapper">
                    <div class="card col s12 hoverable">
                        <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
                            <div class="card-content gray-text">
                                <span class="card-title">Iniciar sesión</span>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                <div class="row">
                                    <div class="input-field col s12">
                                        <input id="username" type="text" class="{% if last_username %} active{% endif %}" name="_username" value="{{ last_username }}" required="required">
                                        <label for="username">Nombre de usuario</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <input id="password" type="password" class="" id="password" name="_password" required="required">
                                        <label for="password">Contraseña</label>
                                    </div>
                                </div>

                            </div>
                            <div class="card-action right-align">
                                <div class="row">
                                    <div class="col s6">
                                        <a href="{{ path('fos_user_resetting_request') }}" class="text-white">¿Has olvidado tu contraseña?</a>
                                    </div>
                                    <div class="col s6">
                                        <button class="waves-effect waves-light btn purple darken-2" type="_submit" name="_submit"><i class="material-icons right hide-on-small-only">input</i>Iniciar</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $( document ).ready(function(){

            $(".button-collapse").sideNav();
            {% if error %}
            Materialize.toast("{{ error.messageKey|trans(error.messageData, 'security') }}",4000);
            {% endif %}

        })
    </script>
{% endblock %}