{% extends "FOSUserBundle::base.html.twig" %}

{% block title %}{{ parent() }} - Recuperar contraseña{% endblock %}

{% block content %}
{% trans_default_domain 'FOSUserBundle' %}
    <div class="container">
        <div class="row">
            <div class="col s12 m10 offset-m1 l6 offset-l3" style="height: 100%">
                <div class="valign-wrapper">
                    <div class="card col s12 hoverable">
                        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                            <div class="card-content gray-text">
                                <span class="card-title">Recuperar tu contraseña</span>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <input id="username" type="text" class="" name="username" required="required">
                                        <label for="username">Nombre de usuario o email</label>
                                    </div>
                                </div>

                            </div>
                            <div class="card-action right-align">
                                <div class="row">
                                    <div class="col s6">
                                        <a href="{{ path('fos_user_security_login') }}" class="text-white">Iniciar sesión</a>
                                    </div>
                                    <div class="col s6">
                                        <button class="waves-effect waves-light btn purple darken-2" type="_submit" name="_submit"><i class="material-icons right hide-on-small-only">input</i>Recuperar</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {% if invalid_username is defined %}
        <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
    {% endif %}
{% endblock %}