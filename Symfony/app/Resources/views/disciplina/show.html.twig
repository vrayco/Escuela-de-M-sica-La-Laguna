{% extends 'base.html.twig' %}

{% block content %}
    <table class="highlight bordered"">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td class="right-align">{{ disciplina.nombre }}</td>
            </tr>
            <tr>
                <th>Grupo disciplina</th>
                <td class="right-align">{{ disciplina.disciplinaGrupo }}</td>
            </tr>
            <tr>
                <th>Edad mínima</th>
                <td class="right-align">{% if disciplina.edadMinima %}{{ disciplina.edadMinima }} años{% else %}---{% endif %}</td>
            </tr>
            <tr>
                <th>Edad máxima</th>
                <td class="right-align">{% if disciplina.edadMaxima %}{{ disciplina.edadMaxima }} años{% else %}---{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <div class="fixed-action-btn horizontal click-to-toggle" style="bottom: 45px; right: 24px;">
        <a class="btn-floating btn-large waves-effect waves-light purple">
            <i class="large material-icons">menu</i>
        </a>
        <ul>
            <li><a href="{{ path('disciplina_index') }}" class="btn-floating waves-effect waves-light grey"><i class="material-icons">view_list</i></a></li>
            <li><a href="{{ path('disciplina_edit', { 'id': disciplina.id }) }}" class="btn-floating btn waves-effect waves-light blue"><i class="material-icons">edit</i></a></li>
            <li><a href="#modal1" class="btn-floating btn waves-effect waves-light red modal-trigger"><i class="material-icons">delete</i></a></li>
        </ul>
    </div>

    <!-- Modal Structure -->
    <div id="modal1" class="modal bottom-sheet">
        <div class="modal-content">
            <h5>¿Estás seguro de eliminar la disciplina: <span class="chip">{{ disciplina.nombre }}</span>?</h5>
            <p>La acción es irreversible. Se eliminará todo la información relacionada con la disciplina (cursos, matriculas, preinscripciones, etc...)</p>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-action modal-close waves-effect waves-green btn grey">No, cancelar</a>
            {{ form_start(delete_form) }}
            <button class="modal-action modal-close waves-effect waves-green btn red" type="submit" name="action">Eliminar
                <i class="material-icons right">delete</i>
            </button>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $( document ).ready(function() {
            $('.modal-trigger').leanModal();
        });
    </script>
{% endblock %}


