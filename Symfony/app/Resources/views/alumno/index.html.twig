{% extends 'base.html.twig' %}

{% block content %}

                <table class="highlight responsive-table">
                    <thead>
                    <tr>
                        <th>Exp</th>
                        <th>DNI</th>
                        <th>Nombre</th>
                        <th>Apellidos</th>
                        <th>Fecha Nacimiento</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for alumno in alumnos %}
                        <tr onclick="document.location = '{{ path('alumno_show', { 'id': alumno.id }) }}';">
                            <td>{{ alumno.expediente }}</td>
                            <td>{{ alumno.dni }}</td>
                            <td>{{ alumno.nombre }}</td>
                            <td>{{ alumno.apellidos }}</td>
                            <td>{% if alumno.fechaNacimiento %}{{ alumno.fechaNacimiento|date('d/m/Y') }}{% endif %}</td>
                            <td>
                                <a href="{{ path('alumno_show', { 'id': alumno.id }) }}" class="btn-floating btn waves-effect waves-light yellow"><i class="material-icons">zoom_in</i></a>
                                <a href="{{ path('alumno_edit', { 'id': alumno.id }) }}" class="btn-floating btn waves-effect waves-light blue"><i class="material-icons">edit</i>edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <div class="fixed-action-btn horizontal click-to-toggle" style="bottom: 45px; right: 24px;">
                    <a class="btn-floating btn-large waves-effect waves-light purple">
                        <i class="large material-icons">menu</i>
                    </a>
                    <ul>
                        <li><a href="{{ path('alumno_new') }}" class="btn-floating waves-effect waves-light green"><i class="material-icons">add</i></a></li>
                        <li><a class="btn-floating waves-effect waves-light indigo"><i class="material-icons">search</i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
