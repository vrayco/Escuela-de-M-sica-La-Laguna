{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Prematrículas{% endblock %}

{% form_theme form 'form/fields.html.twig' %}

{% block content %}
    {{ form_start(form) }}
    <div class="row">
        <div class="input-field col s12">
            {{ form_widget(form.alumno) }}
            {{ form_label(form.alumno)  }}
        </div>
        <h5>Disciplinas en las que se pre-matrícula <small style="color: #ddd">por orden de preferencia</small></h5>
        <div class="input-field col s12">
            {{ form_widget(form.prematriculaEnCursos[0]) }}
        </div>
        <div class="input-field col s12">
            {{ form_widget(form.prematriculaEnCursos[1]) }}
        </div>
        <div class="input-field col s12">
            {{ form_widget(form.prematriculaEnCursos[2]) }}
        </div>
    </div>
    {{ form_rest(form) }}
    <div class="col s12 center-align">
        <div class="fixed-action-btn horizontal" style="bottom: 45px; right: 24px;">
            <button class="btn-floating btn-large waves-effect waves-light" type="submit" name="action">
                <i class="large material-icons">done</i>
            </button>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}

{% block javascripts %}
    <script>
        $( document ).ready(function() {

            $('select').material_select();

            $("input").change(function () {
                $(this).removeClass('invalid');
            });

            {% if form_errors(form)|length > 0 %}
            Materialize.toast("{{ form_errors(form) }}",4000, "error", function(){$('#toast-container').remove()});
            {% endif %}

            {% if form_errors(form.alumno)|length > 0 %}
            Materialize.toast("{{ form_errors(form.alumno) }}", 4000, "error", function(){$('#toast-container').remove()});
            {% endif %}
        });

    </script>
{% endblock %}
