{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Cursos Academicos{% endblock %}

{% block content %}
    {{ form_start(edit_form) }}
    <h5>¿Quiéres definir este curso academico <span class="chip">{{ cursoAcademico.nombre }}</span> como en curso?</h5>
    <div class="row">
        <div class="col s12">
            {{ form_widget(edit_form.enCurso) }}
            {{ form_label(edit_form.enCurso) }}
        </div>
    </div>
    {{ form_rest(edit_form) }}
    <div class="col s12 center-align">
        <div class="fixed-action-btn horizontal" style="bottom: 45px; right: 24px;">
            <button class="btn-floating btn-large waves-effect waves-light" type="submit" name="action">
                <i class="large material-icons">done</i>
            </button>
        </div>
    </div>
    {{ form_end(edit_form) }}
{% endblock %}
