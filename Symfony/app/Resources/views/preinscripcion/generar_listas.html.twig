{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Preinscripciones{% endblock %}

{% block stylesheets %}
    <style>
        label {
            font-size: 18px !important;
        }
    </style>
{% endblock %}

{% form_theme form 'form/fields.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col s12">
            <h5 style="margin-bottom: 40px">Sorteo de plazas</h5>
            {{ form_start(form) }}
            <div class="row">
                <div class="col s12 m6 offset-m3 center-align">
                    {{ form_widget(form.sortear) }}
                    {{ form_label(form.sortear)  }}
                </div>
            </div>
            {{ form_rest(form) }}
            <div class="col s12 center-align">
                <div class="fixed-action-btn horizontal" style="bottom: 45px; right: 24px;">
                    <button class="btn-floating btn-large waves-effect waves-light" type="submit" name="action">
                        <i class="large material-icons">done</i>
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div id="barra-de-progreso" class="row" style="display: none">
        <div class="col s12">
            <div class="progress">
                <div class="indeterminate"></div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>
        $( document ).ready(function() {
            $( "button" ).on( "click", function() {
                if($('#form_sortear').is(":checked")){
                    $('#barra-de-progreso').show();
                } else {
                    Materialize.toast("Tienes que marcar la casilla", 4000, "error", function(){$('#toast-container').remove()});
                }
            });
        });
    </script>
{% endblock %}