{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Preinscripciones{% endblock %}

{% block stylesheets %}
    <style>
        label {
            font-size: 18px !important;
        }
    </style>
{% endblock %}

{% form_theme form 'form/fields.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col s12">
            <h5 style="margin-bottom: 40px">Aceptar รณ rechazar la plaza</h5>
            {{ form_start(form) }}
            <div class="row">
                <div class="col s12">
                    {{ form_widget(form.estado) }}
                    {{ form_label(form.estado)  }}
                </div>
            </div>
            {{ form_rest(form) }}
            <div class="col s12 center-align">
                <div class="fixed-action-btn horizontal" style="bottom: 45px; right: 24px;">
                    <button class="btn-floating btn-large waves-effect waves-light" type="submit" name="action">
                        <i class="large material-icons">done</i>
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $( document ).ready(function() {

            $('select').material_select();

            $( "input" ).change(function() {
            $(this).removeClass('invalid');
            });

            {% if form_errors(form)|length > 0 %}
            Materialize.toast("{{ form_errors(form) }}",4000, "error", function(){$('#toast-container').remove()});
            {% endif %}
        });
    </script>
{% endblock %}